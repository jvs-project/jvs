# JVS shell integration
# Managed by Ansible - Do not edit manually

export PATH="{{ jvs_bin_dir }}:$PATH"

# JVS completion if available
if [ -n "$BASH_VERSION" ]; then
    if [ -f /etc/bash_completion.d/jvs ]; then
        . /etc/bash_completion.d/jvs
    fi
elif [ -n "$ZSH_VERSION" ]; then
    if [ -f /usr/local/share/zsh/site-functions/_jvs ]; then
        autoload -U compinit && compinit
    fi
fi
